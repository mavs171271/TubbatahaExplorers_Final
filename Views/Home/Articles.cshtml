@model VisualStudio.Models.ViewModels.UploadedFileViewModel
@{
    ViewData["Title"] = "Articles page";
}

<div class="text-center">
    <h1 class="display-4">Tubbataha Chronicles</h1>
    <p>View files and contribute your works related to Marine Biodiversity</p>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="col-md-12">
    <form method="post" asp-action="FileUpload" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="FileName"></label>
                <input type="file" name="file" class="form-control" accept=".pdf" required />
            </div>
            <div class="col-md-6">
                <label asp-for="Title"></label>
                <input type="text" asp-for="Title" class="form-control" required />
            </div>
            <div class="col-md-6">
                <label asp-for="Description"></label>
                <input type="text" asp-for="Description" class="form-control" required />
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary mt-3">Upload</button>
            </div>
        </div>
    </form>
</div>
<hr />

@if (Model.SystemFiles.Count == 0)
{
    <caption>Upload your works so that it can be displayed in the platform</caption>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(Model => Model.Title)</th>
                <th>@Html.DisplayNameFor(Model => Model.Description)</th>
                <th>View File</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model.SystemFiles)
            {
                <tr>
                    <th>@file.Title</th>
                    <th>@file.Description</th>
                    <th>
                        @if (!string.IsNullOrEmpty(file.FilePath))
                        {
                            <a asp-action="ViewPDF" asp-route-id="@file.Id" target="_blank" class="btn btn-primary">View PDF</a>
                        }
                    </th>
                   
                </tr>
            }
            <tr>
            </tr>
        </tbody>
    </table>
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Articles" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" asp-action="Articles" asp-route-page="@i">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Articles" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Next</a>
            </li>
        }
    </ul>
</nav>



